<% if !flash[:notice].blank? %>
<div class ="flash notice">
  <%= flash[:notice] %>
</div>
<%end%>

<%= link_to('<< back to pages', pages_path, :class => 'back-link')%>
<div class ="Sections index">
  <h2> Sections </h2>

  <%= link_to("Create new Section", new_section_path, :class => 'action new') %>

    <table class ='list' summary ='sections list'>
    <tr class ="header">
      <th> # </th>
      <th> Page ID </th>
      <th> Name </th>
      <th> Visible </th>
      <th> Content Type </th>
      <th> Actions </th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td> <%= section.position %> </td>
      <td> <%= section.page_id %> </td>
      <td> <%= section.name %> </td>
      <td class ='center'> <%= section.visible ? 'Yes' : 'No' %> </td>
      <td class ='center'> <%= section.content_type %> </td>
      <td class ='actions'>
        <%= link_to("Show", section_path(section), :class => 'action show') %>
        <%= link_to("Edit", edit_section_path(section), :class => 'action edit') %>
        <%= link_to("Delete", delete_section_path(section), :class => 'action delete') %>
      </td>
    </tr>
    <% end%>
  </table>
</div>
