<%= link_to("<< Back to subjects list", subjects_path, :class => 'back-link') %></br>

<%= link_to("<< Back to pages list", pages_path, :class => 'back-link') %>

<div class= "pages show">
  <h2> Show Page </h2>

  <table summary = "Page detail view">
    <tr>
      <th> Name </th>
      <td> <%= @page.name %> </td>
    </tr>

    <tr>
      <th> Position </th>
      <td> <%= @page.position %> </td>
    </tr>

    <tr>
      <th> Permalink </th>
      <td> <%= @page.permalink %> </td>
    </tr>

    <tr>
      <th> Visible </th>
      <td> <%= @page.visible ? "Yes" : "No" %> </td>
    </tr>

    <tr>
      <th> Created </th>
      <td> <%= @page.created_at %> </td>
    </tr>

    <tr>
      <th> Updated </th>
      <td> <%= @page.updated_at %> </td>
    </tr>
  </table>

</div>
